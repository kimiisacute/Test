<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_dy"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@drawable/fanhui"
            android:id="@+id/tv_fh"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_xq"
            android:text="商品详情"
            android:layout_toLeftOf="@+id/tv_fh"
            android:layout_gravity="center_vertical"
            android:textSize="18dp"/>
        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@drawable/sd"
            android:id="@+id/sd_a"
            android:layout_toLeftOf="@+id/tv_xq"
            android:layout_weight="1"
            android:scaleType="fitEnd" />
        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@drawable/fh"
            android:id="@+id/fh_1"
            android:layout_toLeftOf="@+id/sd_a"
            android:layout_marginRight="10dp"
            android:scaleType="fitEnd" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_wz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_dy"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_jbxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="20dp"
            android:text="基本信息"
            android:textColor="#FFC68F"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_twxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="60dp"
            android:text="图文详情"
            android:textColor="#FFC68F"
            android:textSize="20dp" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_wz"
        android:layout_marginTop="10dp"
        android:id="@+id/ll_hd">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_xigua"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:src="@drawable/xigua" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/iv_xigua"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/ll_wznr"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥18.8"
                android:textColor="#e82222"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/iv_dj"
                android:layout_below="@+id/ll_wznr"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="新鲜现摘8424麒麟西瓜 整箱包邮到家 好吃还不贵"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/iv_jj"
                android:layout_below="@+id/iv_dj"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品详情"
                android:textSize="20dp"
                android:id="@+id/iv_bt"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/iv_jj"
                android:gravity="center"/>

            <RelativeLayout
                android:id="@+id/tv_qb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_bt"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="#FFC68F"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/a_mc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/a_mz"
                    android:gravity="center"
                    android:text="商品名称"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/a_mz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:text="8424麒麟西瓜"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/a_bh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/a_mc"
                    android:layout_alignLeft="@id/a_mc"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/a_bm"
                    android:text="商品编号"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/a_bm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/a_mz"
                    android:layout_alignLeft="@id/a_mz"
                    android:layout_marginTop="10dp"
                    android:text="124231"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/a_sj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/a_bh"
                    android:layout_alignLeft="@id/a_bh"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/a_sjs"
                    android:text="上架时间"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/a_sjs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/a_bm"
                    android:layout_alignLeft="@id/a_bm"
                    android:layout_marginTop="10dp"
                    android:text="2020-1-1"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/a_lx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/a_sj"
                    android:layout_alignLeft="@id/a_sj"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/a_sg"
                    android:text="类型"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/a_sg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/a_sjs"
                    android:layout_alignLeft="@id/a_sjs"
                    android:layout_marginTop="10dp"
                    android:text="水果"
                    android:textSize="18dp" />

            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="图文详情"
                android:textSize="20dp"
                android:id="@+id/iv_tw"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/tv_qb"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/iv_xigua3"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:layout_below="@+id/iv_tw"
                android:layout_marginTop="17dp"
                android:src="@drawable/xigua1" />

            <ImageView
                android:id="@+id/iv_xigua1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_xigua3"
                android:layout_marginTop="20dp"
                android:src="@drawable/xigua2" />

        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#FCFCFC"
        android:id="@+id/ll_info">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_jgwc"
            android:layout_marginTop="5dp"
            android:text="加入购物车"
            android:textSize="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/xqym"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_buy"
            android:layout_marginTop="5dp"
            android:text="立即购买"
            android:textSize="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/xqym"/>
    </LinearLayout>
</RelativeLayout>