<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ZhanghaoActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFC68F"
        android:id="@+id/wo1">
        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:id="@+id/iv_fh"
            android:src="@drawable/fanhui"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wo_she"
            android:text="账号与安全"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textColor="#FF000000"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/wo1"
        android:layout_marginTop="50dp"
        android:id="@+id/zh_d1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/wobk">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zh_zh"
            android:text="unny帐号"
            android:textSize="18dp"/>
        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:id="@+id/zh_xy"
            android:src="@drawable/xiay"
            android:layout_toRightOf="@+id/zh_zh"
            android:layout_marginLeft="210dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/zh_d1"
        android:layout_marginTop="5dp"
        android:id="@+id/zh_d2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/wobk">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zh_mm"
            android:text="设置登录密码"
            android:textSize="18dp"/>
        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:id="@+id/zh_xy1"
            android:src="@drawable/xiay"
            android:layout_toRightOf="@+id/zh_mm"
            android:layout_marginLeft="180dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/zh_d2"
        android:id="@+id/zh_d3"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/wobk">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zh_zhiw"
            android:text="指纹登录"
            android:textSize="18dp"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zh_xy2"
            android:src="@drawable/xiay"
            android:layout_toRightOf="@+id/zh_zhiw"
            android:layout_marginLeft="205dp"
            android:track="@drawable/switch_btn"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sfyz"
        android:text="身份验证"
        android:layout_below="@+id/zh_d3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#FF000000"
        android:textSize="18dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/sfyz"
        android:id="@+id/zh_d4"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/wobk">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zh_sl"
            android:text="扫脸验证"
            android:textSize="18dp"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zh_xy3"
            android:src="@drawable/xiay"
            android:layout_toRightOf="@+id/zh_sl"
            android:layout_marginLeft="205dp"
            android:track="@drawable/switch_btn"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/zh_d4"
        android:id="@+id/zh_d5"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/wobk">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zh_sy"
            android:text="声音验证"
            android:textSize="18dp"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zh_xy4"
            android:src="@drawable/xiay"
            android:layout_toRightOf="@+id/zh_sy"
            android:layout_marginLeft="205dp"
            android:track="@drawable/switch_btn"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/zh_zxzh"
        android:gravity="center"
        android:text="注销帐号"
        android:textSize="18dp"
        android:layout_below="@+id/zh_d5"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/wobk"
        android:backgroundTint="#F7E7C1"/>


</RelativeLayout>